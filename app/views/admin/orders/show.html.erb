<div class="container px-5 mx-5">
  <h3 class="mini-title">注文履歴詳細</h3>
    <div class="row">
      <div class="col-4 offset-1">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>購入者</td>
              <td><%= link_to @order.name, admin_customer_path(@customer.id) %></td>
            </tr>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                <p><%= "〒#{@order.postal_code} #{@order.address}" %><br>
                   <%= @order.name %>
                </p>
              </td>
            </tr>
            <tr>
              <td>支払い方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td>注文ステータス</td>
              <td>
                <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
                  <%= f.select :status, Order.statuses_i18n.invert %>
                  <%= f.submit '更新', class: "btn btn-success ml-4" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-1">
        <table class="table table-bordered table-background">
          <thead class="thead-light">
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>制作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.all.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= (order_detail.item.price).to_s(:delimited) %></td>
                <td><%= order_detail.amount %> 個</td>
                <td><%= (order_detail.item.price*order_detail.amount).to_s(:delimited) %></td>
                <td><%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
                      <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                      <%= f.submit '更新', class: "btn btn-success ml-2" %>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-2 d-flex align-items-end ml-3">
        <table class="table table-borderless">
          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment - @order.shipping_fee).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_fee.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
          </tr>
        </table>
      </div>
    </div>
</div>