<div class="container">
  <div class="row">
    <div class="col-3">
     <div class="mini-title ">商品一覧</div>
     </div>
     <div class="offset-7 col-2 mt-4">
     <%= link_to new_admin_item_path do %><i class="fas fa-plus-circle fa-2x text-right"></i>
      <% end %>
      </div>
  </div>
    <div class="row justify-content-cente">
      <div class="col-11">
        <table class="table table-bordered table-hover text-center">
          <thead class="thead">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税込価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody class="tbody">
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item) %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                <% if item.is_active %>
                <font color="green">販売中</font>
                <% else %>
                <font color="red">販売停止中</font>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>