<div class="px-5 mx-5">
  <div class="mx-5 row">
    <div class="mb-5"><h3>商品一覧</h3></div>
    <div class="offset-9">
      <%= link_to "商品追加", new_admin_item_path %>
    </div>
  </div>
</div>

<div class="px-5">
  <div class="row mx-5 px-5">
    <table class="table mx-5 table-borderless table-hover table-background">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税込価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
            <% if item.is_active? %>
             販売中
            <% else %>
             販売停止中
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>