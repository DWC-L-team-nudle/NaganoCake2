<div class="container">
 <div class="row">
  <h4>ジャンル編集</h4>
 </div>
  <p>ジャンル名</p>
   <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
   <%= f.text_field :name %>
   <%= f.submit "変更を保存" ,class: "btn btn-primary" %>
   <%= link_to "削除する", admin_genre_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
   <% end %>
</div>