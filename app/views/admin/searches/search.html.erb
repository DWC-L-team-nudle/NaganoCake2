<div class="container">
  <div class="row">
     <h4 class="mini-title">【<%= @word %>】の検索結果</h4>
  </div>
  <% if @items.exists? %>
    <div class="row justify-content-cente">
      <div class="col-11">
        <table class="table table-bordered table-hover text-center">
          <thead class="thead">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税込価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody class="tbody">
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item) %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                <% if item.is_active %>
                <font color="green">販売中</font>
                <% else %>
                <font color="red">販売停止中</font>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <div class="d-flex justify-content-center">
    <%= paginate @items %>
  </div>
  <% else %>
    <h4>お探しの商品はありません。</h4>
  <% end %>
</div>