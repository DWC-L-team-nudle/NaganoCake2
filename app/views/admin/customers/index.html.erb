<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="mini-title">会員一覧</div>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col-11">
        <table class="table table-bordered table-hover text-center">
          <thead class="thead">
            <tr>
              <th style="width: 10%">会員ID</th>
              <th style="width: 30%">氏名</th>
              <th style="width: 30%">メールアドレス</th>
              <th style="width: 30%">会員ステータス</th>
            </tr>
          </thead>
          <tbody class="tbody">
          <% @customers.each do |customer| %>
            <tr onclick='window.location="<%= '/admin/customers/' + customer.id.to_s %>"' role="link">
              <td><%= customer.id %></td>
              <td>
              <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: "text-dark" %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.active_for_authentication? %>
                  <b class="text-success">有効</b>
                <% else %>
                  <b class="text-muted">退会</b>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center">
        <%= paginate @customers %>
    </div>
</div>