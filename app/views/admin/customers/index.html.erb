<div class="container px-5 mx-5">
  <div class="m-3"><h3 class="mb-3 mini-title">会員一覧</h3></div>
    <div class="row mx-5 px-5">

      <table class="table border-bottom table-hover table-background">
        <thead class="thead-light">
          <tr>
            <th style="width: 10%">会員ID</th>
            <th style="width: 30%">氏名</th>
            <th style="width: 30%">メールアドレス</th>
            <th style="width: 30%">会員ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr onclick='window.location="<%= '/admin/customers/' + customer.id.to_s %>"' role="link">
            <td class="py-4" style="width: 10%"><%= customer.id %></td>
            <td class="py-4" style="width: 30%">
            <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: "text-dark" %>
            </td>
            <td class="py-4" style="width: 30%"><%= customer.email %></td>
            <td class="py-4" style="width: 30%">
              <% if customer.active_for_authentication? %>
                <b class="text-success">有効</b>
              <% else %>
                <b class="text-muted">退会</b>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
      <%= paginate @customers %>
    </div>
    </div>
  </div> 
