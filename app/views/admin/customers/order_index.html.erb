<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="mini-title"><%= @customer.last_name + @customer.first_name %>さんの注文履歴</div>
    </div>
    </div>
      <table class="table table-bordered table-hover text-center">
        <thead class="thead">
          <tr>
           <th>購入日時</th>
           <th>注文個数</th>
           <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody class="tbody">
          <% @orders.each do |order| %>
          <tr>
           <td><%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
               <% end %>
           <td><%= order.order_details.sum(:amount) %></td>
           <td><%= order.status_i18n %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
