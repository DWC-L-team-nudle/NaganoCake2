<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
<table class="table">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= @customer.is_deleted %></td>
    </tr>
  </tbody>
</table>

<div><%= link_to "編集する", edit_admin_@customer_path(params[:id], class: "btn btn-success" %></div>
<div><%= link_to "注文履歴一覧を見る", admin_@customers_path, class: "btn btn-primary" %></div>

