<div class="container">
  <div class="row">
    <div class="mini-title">
      <%= @customer.last_name + @customer.first_name %>さんの会員詳細
    </div>
  </div>
  <table class="table table-bordered col-8 ml-5">
    <tbody>
      <tr>
        <th class="col-4 text-center">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th class="col-4 text-center">氏名</th>
        <td>
          <%= @customer.last_name + " " + @customer.first_name %>
        </td>
      </tr>
      <tr>
        <th class="col-4 text-center">フリガナ</th>
        <td>
          <%= @customer.last_name_kana + " " + @customer.first_name_kana%>
        </td>
      </tr>
      <tr>
        <th class="col-4 text-center">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="col-4 text-center">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="col-4 text-center">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="col-4 text-center">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th class="col-4 text-center">会員ステータス</th>
        <td>
          <% if @customer.active_for_authentication? %>
            <b class="text_success">有効</b>
          <% else %>
            <b class="text-muted">退会</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<div class="ml-5 mt-5">
  <%= link_to "編集する", edit_admin_customer_path(params[:id]), class: "btn btn-success mr-3" %>
  <%= link_to "#{@customer.last_name + @customer.first_name}さんの注文履歴一覧を見る", admin_customer_order_index_path(@customer), class: "btn btn-primary" %>
</div>

