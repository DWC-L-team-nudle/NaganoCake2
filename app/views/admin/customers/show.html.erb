<div class="container px-5 mx-5">
  <h3 class="m-3 mini-title">
    <%= @customer.last_name + @customer.first_name %>さんの会員詳細
  </h3>

<div class="row mx-5 table-borderless col-6">
  <table class="table">
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.last_name + " " + @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= @customer.last_name_kana + " " + @customer.first_name_kana%>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.active_for_authentication? %>
            <b class="text_success">有効</b>
          <% else %>
            <b class="text-muted">退会</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="ml-5 mt-5">
  <%= link_to "編集する", edit_admin_customer_path(params[:id]), class: "btn btn-success mr-3" %>
  <%= link_to "#{@customer.last_name + @customer.first_name}さんの注文履歴一覧を見る", admin_customers_path, class: "btn btn-primary" %>
</div>

