<div class="container py-3">
  <div class="row">
    <div class="col-2 px-2">
      <%= render 'public/items/genre', genres: @genres %>
    </div>
     <div class="col-8">
      <div class="row">
        <h4 class="mini-title">検索結果</h4>
        <% if @items.exists? %>
          <div class="row mx-auto">
          <% @items.each do |item| %>
            <div class="col-4 text-center">
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_item_image(210,150) %>
                <%= item.name %>
              <% end %>
              <p>¥<%= item.price.to_s(:delimited) %></p>
            </div>
          <% end %>
          </div>
          <div class="d-flex justify-content-center">
            <%= paginate @items %>
          </div>
        <% else %>
          <h4>お探しの商品はありません。</h4>
        <% end %>
      </div>
    </div>
</div>
