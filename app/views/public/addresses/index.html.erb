<div class="col-8 mx-auto">
    <h4 class="mini-title mt-3 mb-2">配送先登録 / 一覧</h4>

    <%= form_with model: @address_new, local:true do |f| %>
    <%= render "layouts/errors", obj: @address_new %>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-4" %>
      <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-4" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0－0", class: "form-control col-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :name, "宛名", class: "col-4" %>
      <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-3 mr-4" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>



    <% end %>

    <% if @addresses.exists? %>
      <table class='table mx-5 table-bordered table-hover text-center mb-0'>
        <thead class="table-danger">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thread>
        <tbody  class="table-warning">
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td class="col-5"><%= address.address %></td>
            <td><%= address.name %></td>
            <td class="col-3"><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
                <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか?"  %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
    <div class="col-4 mx-auto mt-5">
      <p class="mt-4 pb-3">ご登録されている配送先はありません</p>
    </div>
    <% end %>
</div>