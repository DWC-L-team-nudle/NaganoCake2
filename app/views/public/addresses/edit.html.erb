<div class="col-8 mx-auto">
  <h4 class="mini-title mt-3">配送先編集</h4>
  <%= form_with model: @address, local:true do |f| %>
  <%= render "layouts/errors", obj: @address %>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-4"  %>
      <%= f.text_field :postal_code, autofocus: true, class: "form-control col-4" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-4" %>
      <%= f.text_field :address, class: "form-control col-7" %>
    </div>
    <div class="form-group row pb-3 mb-0">
      <%= f.label :name, "宛名", class: "col-4" %>
      <%= f.text_field :name, class: "form-control col-4 mr-4" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>

  <% end %>
</div>