<div class="row pl-5">
  <h3 class="mb-5 mt-5 mini-title">注文情報入力</h3>
</div>

<div class="px-5 text-background">
  <%= form_with model:@order, url:comfirm_orders_path do |f| %>
    <h4>支払方法</h4>
    <div class="field form-group pl-4">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
    <h4>お届け先</h4>
    <div class="field form-group pl-4">
      <%= f.radio_button :select_address, "0" %>
      <%= f.label :select_address, "ご自身の住所" %>
    <div class="pl-4 mb-2">
      <p>〒<%= current_customer.postal_code %> <%= current_customer.address %>
          <%= current_customer.last_name %><%= current_customer.first_name %>  </p>
    </div>
      <%= f.radio_button :select_address, "1" %>
      <%= f.label :select_address, "登録済住所から選択" %>
    <div class="pl-4 mb-2">
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address) %>
    </div>
      <%= f.radio_button :select_address, "2" %>
      <%= f.label :select_address, "新しいお届け先" %>

  <div class="pl-4 row">
    <div class="col-9">
      <div class="row mb-2">
        <%= f.label :"郵便番号(ハイフンなし)", class: "brown-border px-3" %>
        <%= f.text_field :postal_code, placeholder:"000000", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="row mb-2">
        <%= f.label :"住所", class: "brown-border px-3" %>
        <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", autofocus: true, autocomplete: "email", class: "col-5" %>
      </div>
      <div class="row mb-2">
        <%= f.label :"宛名", class: "brown-border px-3" %>
        <%= f.text_field :name, placeholder:"令和 道子", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="row mt-5">
          <%= f.submit "確認画面へ進む" , class: "btn btn-sm btn-primary" %>
      <div class="col-5"></div>
    </div>
  <% end %>
</div>