  <div class="container">
    <div class="row pt-5">
      <div class="col-7">
          <table class="table mx-5 table-bordered">
            <thead class="thead-danger">
              <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
              </tr>
               <!--合計金額totalの初期化-->
               <% total = 0 %>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= image_tag cart_item.item.item_image, size: '70x50' %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              </tr>
              <% total += cart_item.subtotal %>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-4 offset-1">
          <table class= "table table-bordered">
            <tr class="table"><th>送料</th><td>800</td>
            </tr>
            <tr class="table"><th>商品合計</th><td><%= total.to_s(:delimited) %></td>
            </tr>
            <tr class="table"><th>請求金額</th><td><%= (total + 800).to_s(:delimited) %></td>
            </tr>
          </table>
        </div>
        <div class="offset-1">
          <div class= "d-flex">
            <h5><b>支払方法</b></h5>
            <span><%= @order.payment_method_i18n %></span>
          </div>
          <div class= "d-flex">
            <h5><b>お届け先</b></h5>
            <span>〒<%= @order.postal_code %>　<%= @order.address %>　<%= @order.name %></span>
          </div>
          <div class="mb-3">
            <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :payment_method %>
              <%= f.hidden_field :address %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :postal_code %>
              <%= f.hidden_field :shipping_fee %>
              <%= f.hidden_field :total_payment %>
              <%= f.submit "注文を確定する",class:"btn btn-success " %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>