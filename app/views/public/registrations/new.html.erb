<div class="container py-3">
 <div class="col-8 mx-auto">
  <h3 class="mini-title">新規会員登録</h3>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
    <!--名前-->
    <div class="form-group row ">
     <%= f.label :名前, class: "col-3 " %>
     <%= f.label :last_name, "(姓)" , class: "col-2" %>
     <%= f.text_field :last_name, autocomplete: "last-name", placeholder: "令和", class: "form-control col-2" %>
     <%= f.label :first_name, "(名)", class: "col-2" %>
     <%= f.text_field :first_name, autocomplete: "first_name-name", placeholder: "道子", class: "form-control col-2" %>
    </div>
    <!--フリガナ-->
    <div class="form-group row">
     <%= f.label :フリガナ, class: "col-3" %>
     <%= f.label :last_name_kana, "(セイ)", class: "col-2" %>
     <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control col-2" %>
     <%= f.label :first_name_kana, "(メイ)", class: "col-2" %>
     <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ", class:"form-control col-2" %>
    </div>
    <!--メールアドレス-->
    <div class="form-group row">
     <%= f.label :email, "メールアドレス", class: "col-5" %>
     <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-4" %>
    </div>
    <!--郵便番号-->
    <div class="form-group row">
     <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-5" %>
     <%= f.text_field :postal_code, autocomplete: "postal-code", placeholder: "0000000", class: "form-control col-4" %>
    </div>
    <!--住所-->
    <div class="form-group row">
     <%= f.label :address, "住所", class:"col-5" %>
     <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0－0", class:"form-control col-4" %>
    </div>
    <!--電話番号-->
    <div class="form-group row">
     <%= f.label :telephone_number,"電話番号(ハイフンなし)", class: "col-5" %>
     <%= f.text_field :telephone_number, autocomplete: "tel", placeholder:"0000000000", class:"form-control col-4" %>
    </div>
    <!--パスワード-->
    <div class="form-group row">
     <div class="password-form col-5" %>
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以上)
      <% end %>
     </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-4" %>
    </div>
    <div class="form-group row">
     <%= label :password_confirmation, "パスワード(確認用)", class:"col-5" %>
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-4" %>
    </div>
    <div class="form-group text-center">
     <%= f.submit "新規登録", class: 'btn btn-sm btn-success col-4' %>
    </div>
      <% end %>
    <p class="mini-title">既にご登録済みの方</p>
    <div class= "ml-4 pb-4">
     <%= render "public/shared/links"%>
    </div>
</div>