<div class="container">
  <div class="row">
    <div class="mx-auto">
      <p class="signup_message">　新規会員登録　</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <!--名前-->
        <div class="Namae row">名前
          <div class="field">
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autocomplete: "family-name" %>
          </div>
          <div class="field">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, autocomplete: "given-name" %>
          </div>
        </div>

        <!--フリガナ-->
        <div class="Namae_kana row">フリガナ
          <div class="field">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, autocomplete: "off" %>
          </div>
          <div class="field">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, autocomplete: "off" %>
          </div>
        </div>

        <!--メールアドレス-->
        <div class="field">メールアドレス
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <!--郵便番号-->
        <div class="field">郵便番号(ハイフンなし)
          <%= f.text_field :postal_code, autocomplete: "postal-code" %>
        </div>

        <!--住所-->
        <div class="field">住所
          <%= f.text_field :address, autocomplete: "street-address" %>
        </div>

        <!--電話番号-->
        <div class="field">電話番号(ハイフンなし)
          <%= f.text_field :telephone_number, autocomplete: "tel" %>
        </div>

        <!--パスワード-->
        <div class="field">パスワード(６文字以上)
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">パスワード(確認用)
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>

      <p class="signup_message">　既にご登録済みの方　</p></br>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>