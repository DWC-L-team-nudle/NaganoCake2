<div class="container py-3">
 <div class="row">
  <div class="col-2 px-2">
    <%= render 'genre', genres: @genres %>
  </div>
  <div class="col-3 mt-4 ml-3">
   <%= image_tag @item.get_item_image(300,200) %>
  </div>
  <div class="col-5 mt-5 ml-5">
   <h4><strong><%= @item.name %></strong></h4>
   <h5><%= @item.introduction %></h5>
   <h5>￥<%= @item.with_tax_price.to_s(:delimited) %>（税込）</h5>
    <%= form_with model: @cart_item, url: cart_items_path do |f| %>
    <div class="select-group">
    <%= f.select :amount, *[1..10], include_blank: '個数選択' %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit "カートに入れる", class: "btn btn-success" %>
   </div>
    <% end %>
  </div>
 </div>
</div>