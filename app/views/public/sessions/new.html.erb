<div class="col-8 mx-auto">
    <h3 class="mini-title mt-5">ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class="mini-title">会員の方はこちらからログイン</p>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class:"col-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-3" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class:"col-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-3" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン",class: 'btn btn-sm btn-primary' %>
        </div>
      <% end %>

    <p class="mini-title mt-3">会員登録がお済みでない方</p>
    <div class="ml-4 pb-4">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
