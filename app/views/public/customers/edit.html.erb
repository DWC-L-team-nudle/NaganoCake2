<div class="container">
  <h4 class="mini-title my-3">会員情報編集</h4>
    <%= form_with model: @customer, local:true do |f| %>
      <%= render 'public/shared/error_messages', resource: @customer %>
      <!--名前-->
      <div class="form-group row">
        <%= f.label :名前, class: "col-3" %>
        <%= f.text_field :last_name, autocomplete: "last-name", placeholder: "令和", class: "form-control col-2 mr-3" %>
        <%= f.text_field :first_name, autocomplete: "first_name-name", placeholder: "道子", class: "form-control col-2" %>
      </div>
      <!--フリガナ-->
      <div class="form-group row">
        <%= f.label :フリガナ, class: "col-3" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control col-2 mr-3" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ", class:"form-control col-2" %>
      </div>
      <!--郵便番号-->
      <div class="form-group row">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3" %>
        <%= f.text_field :postal_code, autocomplete: "postal-code", placeholder: "0000000", class: "form-control col-3" %>
      </div>
      <!--住所-->
      <div class="form-group row">
        <%= f.label :address, "住所", class:"col-3" %>
        <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0－0", class:"form-control col-5" %>
      </div>
      <!--電話番号-->
      <div class="form-group row">
        <%= f.label :telephone_number,"電話番号(ハイフンなし)", class: "col-3" %>
        <%= f.text_field :telephone_number, autocomplete: "tel", placeholder:"0000000000", class:"form-control col-3" %>
      </div>
      <!--メールアドレス-->
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-3" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-3" %>
      </div>
      <div class="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-success mr-3" %>
        <%= link_to "退会する", unsubscribe_path(current_customer), class: "btn btn-danger" %>
      </div>
  <% end %>
</div>