<div class="container py-3">
 <div class="col-8 mx-2">
  <h3 class="mini-title">マイページ</h3>
  <h4 class="title">登録情報</h4>
 </div>
 
  <table class="table table-bordered col-7 ml-4">
    <tbody>
      <tr>
        <th class="col-4 table-background text-center">氏名</th>
        <th><%= @customer.last_name%>　<%= @customer.first_name %></th>
      </tr>
      <tr>
        <th class="table-background text-center" >カナ</th>
        <th><%= @customer.last_name_kana%>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th class="table-background text-center" >郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th class="table-background text-center">住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th class="table-background text-center">電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th class="table-background text-center">メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    <tbody>
  </table>
  <div class="text-center">
   <%= link_to "編集する", edit_customer_path(current_customer), class:"btn btn-success col-2" %>
  </div>
   
  <div class="col-8 mx-2">
    <h4 class="title">配送先
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></h4>
    <h4 class="title">注文履歴
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></h4>
  </div>
</div>