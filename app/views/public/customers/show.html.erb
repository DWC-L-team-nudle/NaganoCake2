<div class="col-9 mx-auto">
  <h3 class="mt-3 ml-4 mini-title font-weight-bold">マイページ</h3>

  <div class="row mt-3 mb-2">
    <h3 class="col-2">登録情報</h3>
    <%= link_to "編集する", edit_customer_path(current_customer), class:"btn btn-success" %>
  </div>

  <table class="table table-bordered col-8 ml-4 text-center">
    <tbody>
      <tr>
        <th class="col-3 table-danger">氏名</th>
        <th class="table-warning"><%= @customer.last_name%>　<%= @customer.first_name %></th>
      </tr>
      <tr>
        <th class="table-danger" >カナ</th>
        <th class="table-warning"><%= @customer.last_name_kana%>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th class="table-danger" >郵便番号</th>
        <th class="table-warning">〒<%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th class="table-danger">住所</th>
        <th class="table-warning"><%= @customer.address %></th>
      </tr>
      <tr>
        <th class="table-danger">電話番号</th>
        <th class="table-warning"><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th class="table-danger">メールアドレス</th>
        <th class="table-warning"><%= @customer.email %></th>
      </tr>
    <tbody>
  </table>
  <div class="row mb-2">
    <h4 class="col-3">配送先</h4>
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
  </div>
  <div class="row pb-3">
    <h4 class="col-3">注文履歴</h4>
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
  </div>
</div>