<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h3 class="mini-title">ショッピングカート</h3>
        <div class="offset-10 mb-3">
          <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
        </div>

  <table class="table table-bordered">
   <thead class="thead-light">
    <tr>
      <th style="width: 30%">商品名</th>
      <th style="width: 20%">単価（税込）</th>
      <th style="width: 20%">数量</th>
      <th style="width: 20%">小計</th>
      <th></th>
    </tr>
     <% total = 0 %>
   </thead>
   <tbody>
    <% if current_customer.cart_items.present? %>
     <% @cart_items.each do |cart_item| %>
      <tr>
        <td class="align-middle">
         <% if cart_item.item.item_image.attached? %>
　        <%= image_tag cart_item.item.get_item_image(50,40) %>
　       <% else %>
　        <%= image_tag 'no_image.jpg' %>
         <% end %>
         <%= cart_item.item.name %>
        </td>
        <td class="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td class="align-middle">
         <%= form_with model: cart_item do |f| %>
          <div class="row ml-auto">
            <%= f.select :amount, *[1..9] %>
            <%= f.submit "変更", class:'btn btn-sm ml-2 btn-success' %>
          </div>
         <% end %>
        </td>
        <td class="align-middle"><%= cart_item.subtotal.to_s(:delimited) %></td>
        <td class="text-center align-middle">
          <%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
        <% total += cart_item.subtotal %>
     <% end %>
    <% end %>
   </tbody>
  </table>
  <div class="col-xs-3 pull-right billing offset-10">
   <table class="table table-bordered">
    <th>合計金額</th>
    <td><%= total.to_s(:delimited) %>円</td>
   </table>
  </div>
  <div class="my-4 offset-4">
    <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success ml-3" %>
  </div>
</div>
 </div>
</div>